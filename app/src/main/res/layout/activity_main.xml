<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonSeven"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="319dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonEight"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="319dp"
        android:text="8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNine"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="319dp"
        android:text="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDivided"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="319dp"
        android:text="/"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBackSpace"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="319dp"
        android:text="@string/backspace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFour"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="391dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFive"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="391dp"
        android:text="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSix"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="391dp"
        android:text="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTimes"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="391dp"
        android:text="x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="389dp"
        android:text="C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonOne"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="459dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="459dp"
        android:text="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonThree"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="459dp"
        android:text="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLess"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="459dp"
        android:text="-"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonZero"
        android:layout_width="145dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="525dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="173dp"
        android:layout_marginTop="525dp"
        android:text="."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="525dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="65dp"
        android:layout_height="120dp"
        android:layout_marginStart="330dp"
        android:layout_marginTop="460dp"
        android:text="="
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mathExpression"
        android:layout_width="335dp"
        android:layout_height="85dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="184dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:ems="10"
        android:hint="CompleteCalc"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>